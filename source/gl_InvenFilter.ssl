   call Create_btn_armor("off", 1);
   call Create_btn_weapon("off", 1);
   call Create_btn_ammo("off", 1);
   call Create_btn_drug("off", 1);
   call Create_btn_tool("off", 1);
   call Create_btn_misc("off", 1);

   showWin;

   if (isLoot == false) then begin
