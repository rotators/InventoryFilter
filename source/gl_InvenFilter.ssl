   DTRACE("refresh_pc_weight")

   item := critter_inven_obj(dude_obj, INVEN_TYPE_WORN);
   if (item) then equp := item_weight(item);

   item := critter_inven_obj2(dude_obj, INVEN_TYPE_LEFT_HAND);
